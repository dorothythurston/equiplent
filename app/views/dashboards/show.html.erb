<h2>Welcome</h2>
<% if current_user.admin? %>
  <div>
    <%= link_to 'View all Reservations', reservations_path %>
  </div>
  <div>
    <%= link_to "View all Equipment", items_path %>
  </div>
  <div>
    <%= link_to "Make a New Item", new_item_path %>
  </div>
<% end %>

<% if current_user.open_reservations.present? %>
  <h2>My Reserved Items</h2>
  <% @open_reservations.each do |reservation| %>
    <%= link_to reservation.item.name, reservation %>
  <% end %>

  <h2>My Pending Reservations</h2>
    <% @pending_reservations.each do |reservation| %>
    <%= link_to reservation.item.name, reservation %>
  <% end %>
<% end %>


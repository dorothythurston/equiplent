<h2><%= @user.first_name %> <%= @user.last_name %></h2>
<div>
  <%= @user.profile_type %>
</div>

<% if current_user.admin %>
  <%= form_for(@user) do |form| %>
    <%= form.check_box :admin %>
    <%= form.submit 'change admin status' %>
  <% end %>
<% end %>

<% if @user = current_user %>
  <div>
    <%= link_to 'edit personal information', edit_user_path(current_user) %>
  </div>
<% end %>

<h3>reservations:</h3>
<% @user.reservations.each do |reservation|%>
  <div>
    <li>
      <%= link_to reservation.item.name, reservation_path(reservation) %> <%= reservation.item.category %>
      // <%= reservation.begins_at.to_formatted_s(:long) %>
      -- <%= reservation.ends_at.to_formatted_s(:long) %>
    </li>
  </div>
<% end %>

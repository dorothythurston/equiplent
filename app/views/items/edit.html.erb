<h2>update item</h2>
<%= form_for(@item) do |form| %>
  <%= form.text_field :name, placeholder: "name" %>
  <%= form.select :category, Item::CATEGORIES %>
  <%= form.url_field :url, placeholder: "image link" %>
  <%= form.text_field :description, placeholder: "description" %>
  <%= form.submit "update" %>
<% end %>
<%= button_to 'delete', item_path(@item), method: :delete,
confirm: "Are you sure you want to delete this skill?" %>
